{
	"nodemonConfig": {
		"watch": ["src"],
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules",
			"uploads",
			"addons",
			"./mongo_vs.js",
			"mongo_vs.js"
