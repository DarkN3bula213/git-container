{
   "ts-node":{
      "require":[
         "tsconfig-paths/register"
      ]
   },
   "compilerOptions":{
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@lib/*": ["lib/*"]
		},
		"typeRoots": ["node_modules/@types", "src/types"],
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true, // Warns about unused local variables, which includes imports
		"noUnusedParameters": true
   },
   "exclude": [
      "node_modules",
      "dist",
      "addons",
      "uploads/**/*.ts",
      "tests",
   ]
}